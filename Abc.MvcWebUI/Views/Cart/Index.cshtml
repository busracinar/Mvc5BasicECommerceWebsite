@model Abc.MvcWebUI.Models.Cart
@{
    ViewBag.Title = "Index";
}
<div class="container pb-5 mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Alışveriş Sepeti</h2>
            <hr />
            @if (Model.CardLines.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Adet</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Ara Toplam</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CardLines)
                        {
                            <tr>
                                <td><img src="~/Upload/@item.Product.Image" width="50" /></td>
                                <td>@item.Quantity</td>
                                <td>@item.Product.Name</td>
                                <td>@item.Product.Price</td>
                                <td>
                                    <i class="fa fa-try" aria-hidden="true"></i>
                                    @(item.Product.Price * item.Quantity)
                                </td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("ID", item.Product.ID)
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                            Sil
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5"></td>
                            <td>@Model.Total().ToString("c")</td>

                        </tr>
                    </tfoot>
                </table>
                <div class="text-center">
                    <a href="/Home/List" class="btn btn-primary">
                    <i class="fa fa-angle-double-left"aria-hidden="true"></i>
                    Alışverişe Devam Et</a>
                    <a href="/Cart/Checkout" class="btn btn-primary">
                    <i class="fa fa-check"aria-hidden="true"></i>
                    Alışverişi Tamamla</a>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    Alışveriş Sepetinizde Ürün Bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>


